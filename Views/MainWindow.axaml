        <StackPanel VerticalAlignment="Top"
               HorizontalAlignment="Center"
               Spacing="20"
               Margin="25">
            <Button Content="Add one!"
                    Command="{Binding AddOneCommand}"/>
            <TextBlock HorizontalAlignment="Center"
                       Text="{Binding Count}"/>
            <TextBlock HorizontalAlignment="Center"
                       Text="{Binding Path}"/>
        
            <WrapPanel>
                <TextBlock Margin="10" Text="Folder path:"/>
                <TextBox Width="450" Text="{Binding Path}"></TextBox>
            </WrapPanel>
        
            <WrapPanel>
                <TextBlock Margin="15" Text="Sort by:"></TextBlock>
                <ComboBox Margin="10">
                    <ComboBoxItem Content="By Month"/>
                    <ComboBoxItem Content="By Year"/>
                </ComboBox>
            </WrapPanel>
        
            <WrapPanel>
                <TextBlock Margin="10" Text="File extension to sort:"/>
                <TextBox Width="25" Text=""></TextBox>
            </WrapPanel>
        
        
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding Error}"/>
        </StackPanel>

        <WrapPanel VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="10">
            <ProgressBar HorizontalAlignment="Stretch"
                         Margin="10"
                         Value="{Binding Progress}"></ProgressBar>
            <TextBlock HorizontalAlignment="Right" Text="{Binding Progress}"></TextBlock>
        </WrapPanel>
        
        
        <Panel VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               Margin="10">
            <Button Content="Organize"
                    Command="{Binding Organize}"></Button>
        </Panel>
        
